  (mode-line                                 (:foreground crypt-secondary :background crypt-mode-line :box (:line-width 8 :color crypt-highlight) :height 250))
  (mode-line-inactive                        (:foreground crypt-secondary-complementary :background crypt-mode-line :box (:line-width 8 :color crypt-highlight) :height 250))
  (header-line                               (:foreground crypt-secondary :background crypt-primary :box (:line-width '(5 . 5) :color crypt-highlight :style 'pressed-button) :height 200))
  (font-lock-punctation-face                 (:foreground crypt-punctuation))
