;; -*- lexical-binding: t; -*-
(require 'autothemer)

(autothemer-deftheme
 crypt "A minimalistic theme based on Alabaster and a reddish pastel tint."
 ((((class color) (min-colors #xFFFFFF)))

  ;; Defines Color palette
  (crypt-primary "#3C2A33")
  (crypt-primary-complementary "#2C1A23")
  (crypt-primary-contrast "#2A3C33")
  (crypt-secondary "#C5C5C5")
  (crypt-secondary-complementary "#515151")
  (crypt-highlight "#FFdef0")
  (crypt-string "#8FBC8F")
  (crypt-comment "#FFDAB9")
  (crypt-constant "#9370DB")
  (crypt-warning "#C8102e")
  (crypt-global-def "#FF1493")
  (crypt-punctuation "#708B8D")
  (crypt-highlight-punctuation "#21FFBF")
  (crypt-mode-line "#4f3f47"))
 
 ;; Customize faces
 ((default                                   (:foreground crypt-secondary :background crypt-primary :family "Fantasque Sans Mono" :height 185))
